/* components/tile-selector/tile-selector.wxss */
.tile-selector {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
}

.selector-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #e5e7eb;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
}

.tile-count {
  font-size: 28rpx;
  color: #10b981;
  font-weight: bold;
}

.tile-section {
  margin-bottom: 32rpx;
}

.section-title {
  display: block;
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
  font-weight: bold;
}

.tile-grid {
  display: grid;
  grid-template-columns: repeat(9, 1fr);
  gap: 8rpx;
}

.tile-item {
  aspect-ratio: 1;
  background: #f3f4f6;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  border: 2rpx solid #e5e7eb;
  transition: all 0.2s;
}

.tile-item.selected {
  background: #d1fae5;
  border-color: #10b981;
  transform: scale(1.05);
}

.tile-text {
  font-size: 24rpx;
  color: #1f2937;
  font-weight: bold;
}

.tile-badge {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  background: #ef4444;
  color: white;
  font-size: 18rpx;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

.selector-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.btn-action {
  flex: 1;
  height: 70rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.btn-clear {
  background: #e5e7eb;
  color: #374151;
}

.btn-confirm {
  background: #10b981;
  color: white;
}
