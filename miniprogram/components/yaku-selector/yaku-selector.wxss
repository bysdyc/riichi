/* 役种选择器容器 */
.yaku-selector {
  padding: 20rpx 0;
}

/* 类别区域 */
.yaku-category {
  margin-bottom: 30rpx;
}

/* 类别标题 */
.category-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1f2937;
  padding: 10rpx 20rpx;
  background: linear-gradient(90deg, #f3f4f6 0%, transparent 100%);
  border-left: 4rpx solid #3b82f6;
  margin-bottom: 15rpx;
}

/* 役种列表 */
.yaku-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  padding: 0 20rpx;
}

/* 役种项 */
.yaku-item {
  flex: 0 0 calc(50% - 5rpx);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 8rpx;
  transition: all 0.2s ease;
  cursor: pointer;
}

.yaku-item:active {
  transform: scale(0.98);
}

/* 选中状态 */
.yaku-item.selected {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  border-color: #2563eb;
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.3);
}

.yaku-item.selected .yaku-name,
.yaku-item.selected .yaku-han {
  color: white;
  font-weight: 600;
}

/* 役种名称 */
.yaku-name {
  font-size: 26rpx;
  color: #374151;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 役种番数 */
.yaku-han {
  font-size: 22rpx;
  color: #6b7280;
  margin-left: 10rpx;
  white-space: nowrap;
}

/* 役满特殊样式 */
.yaku-category:first-child .yaku-item {
  border-color: #fbbf24;
}

.yaku-category:first-child .yaku-item.selected {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  border-color: #d97706;
  box-shadow: 0 2rpx 8rpx rgba(245, 158, 11, 0.3);
}

.yaku-category:first-child .category-title {
  border-left-color: #f59e0b;
  color: #92400e;
}
