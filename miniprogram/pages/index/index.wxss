/* pages/index/index.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 80rpx;
  padding-top: 60rpx;
}

.title {
  display: block;
  font-size: 56rpx;
  font-weight: bold;
  color: #065f46;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
}

.game-types {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  margin-bottom: 48rpx;
}

.game-type-card {
  background: white;
  border-radius: 24rpx;
  padding: 48rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s;
}

.game-type-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.12);
}

.card-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.card-desc {
  font-size: 28rpx;
  color: #6b7280;
}

.tobu-option {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.tobu-label {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 30rpx;
  color: #374151;
}

.saved-game-notice {
  background: #fef3c7;
  border: 2rpx solid #fbbf24;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.notice-icon {
  font-size: 64rpx;
}

.saved-game-notice text {
  font-size: 30rpx;
  color: #92400e;
  font-weight: bold;
}

.btn-continue {
  width: 100%;
  background-color: #10b981;
  color: white;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 32rpx;
  border: none;
}

.btn-clear {
  width: 100%;
  background-color: #ef4444;
  color: white;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 32rpx;
  border: none;
}
