/* app.wxss - 全局样式 */
page {
  background: linear-gradient(to bottom right, #f0fdf4, #d1fae5);
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.container {
  padding: 20rpx;
}

/* 按钮样式 */
.btn-primary {
  background-color: #10b981;
  color: white;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: none;
}

.btn-secondary {
  background-color: #6b7280;
  color: white;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: none;
}

.btn-danger {
  background-color: #ef4444;
  color: white;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: none;
}

/* 卡片样式 */
.card {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* Toast提示 */
.toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 24rpx 48rpx;
  border-radius: 12rpx;
  z-index: 9999;
}
