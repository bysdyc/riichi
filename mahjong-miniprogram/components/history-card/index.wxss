.history-card {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 32rpx;
  border-radius: 20rpx;
  background: #ffffff;
  box-shadow: 0 12rpx 32rpx rgba(15, 23, 42, 0.06);
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.round {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
}

.type-chip {
  font-size: 24rpx;
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  background: #e2e8f0;
  color: #1f2937;
  font-weight: 600;
}

.type-chip-tsumo {
  background: #dcfce7;
  color: #15803d;
}

.type-chip-ron {
  background: #fee2e2;
  color: #b91c1c;
}

.type-chip-multi {
  background: #f3e8ff;
  color: #7c3aed;
}

.type-chip-draw {
  background: #e2e8f0;
  color: #475569;
}

.type-chip-default {
  background: #e2e8f0;
  color: #1f2937;
}

.timestamp {
  font-size: 22rpx;
  color: #94a3b8;
}

.summary {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  color: #0f172a;
}

.summary-main {
  font-size: 30rpx;
  font-weight: 600;
}

.summary-sub {
  font-size: 26rpx;
  color: #475569;
}

.meta {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  font-size: 26rpx;
  color: #0f172a;
}

.hanfu {
  font-weight: 600;
}

.status-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.status-tag {
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  background: #dbeafe;
  color: #1d4ed8;
  font-weight: 600;
}

.info-row {
  font-size: 24rpx;
  color: #1f2937;
}

.multi-summary {
  font-size: 24rpx;
  color: #6b21a8;
  background: #f5f3ff;
  padding: 16rpx;
  border-radius: 16rpx;
}

.multi-detail {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.multi-detail-row {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  background: #f5f3ff;
  padding: 16rpx;
  border-radius: 16rpx;
  color: #312e81;
}

.multi-name {
  font-weight: 700;
}

.multi-hanfu {
  color: #4338ca;
}

.multi-points {
  margin-left: auto;
  color: #1d4ed8;
  font-weight: 600;
}

.multi-bonus {
  color: #047857;
  font-size: 24rpx;
}

.toggle {
  margin-top: 16rpx;
  text-align: right;
}

.toggle-link {
  font-size: 24rpx;
  color: #2563eb;
}

.detail-panel {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.hand-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 20rpx;
}

.hand-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.hand-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #475569;
}

.tile-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tile {
  min-width: 48rpx;
  padding: 6rpx 12rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  font-weight: 600;
  text-align: center;
  background: #e2e8f0;
  color: #1f2937;
}

.tile-man {
  background: #fee2e2;
  color: #b91c1c;
}

.tile-pin {
  background: #dbeafe;
  color: #1d4ed8;
}

.tile-sou {
  background: #dcfce7;
  color: #15803d;
}

.tile-honor {
  background: #ede9fe;
  color: #6d28d9;
}

.tile-win {
  border: 2rpx solid #f97316;
}

.melds {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  width: 100%;
}

.meld {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 16rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e2e8f0;
  background: #ffffff;
}

.meld-type {
  font-size: 24rpx;
  font-weight: 600;
  color: #0f172a;
}

.dora-row {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #475569;
}

.meta-label {
  font-weight: 600;
}

.meta-value {
  color: #0f172a;
}

.players {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  background: #f1f5f9;
  border-radius: 16rpx;
  padding: 20rpx;
}

.players-head,
.players-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}

.players-head {
  font-weight: 600;
  color: #475569;
}

.col-name {
  flex: 1;
  color: #0f172a;
}

.col-delta {
  width: 200rpx;
  text-align: right;
}

.col-score {
  width: 200rpx;
  text-align: right;
  color: #0f172a;
}

.delta-positive {
  color: #047857;
}

.delta-negative {
  color: #b91c1c;
}

.delta-neutral {
  color: #475569;
}
