.draw-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(15, 23, 42, 0.45);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 32rpx;
  box-sizing: border-box;
  z-index: 120;
}

.dialog-card {
  width: 100%;
  max-width: 640rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 16rpx 40rpx rgba(15, 23, 42, 0.12);
  display: flex;
  flex-direction: column;
  height: 80vh;
  max-height: 80vh;
  box-sizing: border-box;
  overflow: hidden;
}

.dialog-header {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  padding: 32rpx 32rpx 20rpx;
}

.dialog-header-fixed {
  position: sticky;
  top: 0;
  z-index: 100;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  flex-shrink: 0;
}

.dialog-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #0f172a;
}

.dialog-close {
  position: absolute;
  top: 0;
  right: 0;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 600;
  padding: 0;
}

.dialog-close::after {
  border: none;
}

.dialog-scroll {
  flex: 1 1 auto;
  overflow-y: auto;
  padding: 0 32rpx 32rpx;
  box-sizing: border-box;
  height: 1px;
  min-height: 0;
  -webkit-overflow-scrolling: touch;
}

.dialog-scroll-with-header {
  padding-top: 24rpx;
}

.dialog-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #e2e8f0;
  margin-bottom: 24rpx;
}

.dialog-section:last-of-type {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.section-head {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #0f172a;
}

.section-hint {
  font-size: 24rpx;
  color: #64748b;
}

.section-hint.muted {
  color: #94a3b8;
}

.chip-row {
  display: flex;
  gap: 16rpx;
}

.chip {
  flex: 1;
  border-radius: 999rpx;
  border: 2rpx solid #cbd5f5;
  color: #1d4ed8;
  background: #f8fafc;
  font-size: 26rpx;
  padding: 12rpx 0;
}

.chip::after {
  border: none;
}

.chip.active {
  background: #2563eb;
  color: #ffffff;
  border-color: #2563eb;
}

.player-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 16rpx;
}

.player-chip {
  border-radius: 16rpx;
  border: 2rpx solid #e2e8f0;
  padding: 18rpx;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  background: #f1f5f9;
  transition: border-color 0.2s ease, background 0.2s ease, color 0.2s ease;
  color: #475569;
  font-size: 28rpx;
}

.player-chip.active {
  border-color: #2563eb;
  background: #2563eb;
  color: #ffffff;
}

.player-chip.riichi-locked {
  border-color: #f59e0b;
  background: #fef3c7;
  color: #92400e;
  position: relative;
}

.player-chip.riichi-locked.active {
  border-color: #f59e0b;
  background: #f59e0b;
  color: #ffffff;
}

.player-chip.riichi-locked .player-sub {
  color: #92400e;
}

.player-chip.riichi-locked.active .player-sub {
  color: #ffffff;
}

.player-name {
  font-weight: 600;
}

.player-sub {
  font-size: 22rpx;
  color: #94a3b8;
}

.player-chip.active .player-sub {
  color: #ffffff;
}

.nagashi-toggle {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14rpx 18rpx;
  border-radius: 12rpx;
  border: 2rpx dashed #cbd5f5;
  color: #2563eb;
  font-size: 26rpx;
}

.nagashi-toggle .icon {
  font-size: 30rpx;
  font-weight: 600;
}

.dialog-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  flex-shrink: 0;
  border-top: 2rpx solid #e2e8f0;
  background: #ffffff;
}

.ghost {
  border: 2rpx solid #cbd5f5;
  color: #1d4ed8;
  background: #f8fafc;
}

.primary {
  background: #2563eb;
  color: #ffffff;
}

.preview-section {
  gap: 20rpx;
}

.section-hint.error {
  color: #dc2626;
}

.preview-notes {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 14rpx 18rpx;
  border-radius: 14rpx;
  background: #f8fafc;
}

.preview-note {
  font-size: 24rpx;
  color: #475569;
}

.preview-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.preview-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  background: #f1f5f9;
  border-radius: 16rpx;
}

.preview-name {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  color: #0f172a;
  font-weight: 600;
}

.name-text {
  line-height: 1.2;
}

.tag {
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 999rpx;
  background: #e2e8f0;
  color: #475569;
}

.tag.dealer {
  background: #fde68a;
  color: #92400e;
}

.tag.nagashi {
  background: #c4b5fd;
  color: #4c1d95;
}

.tag.riichi {
  background: #fca5a5;
  color: #7f1d1d;
}

.preview-delta {
  font-size: 28rpx;
  font-weight: 600;
  color: #0f172a;
}

.preview-delta.positive {
  color: #16a34a;
}

.preview-delta.negative {
  color: #dc2626;
}
