.meld-panel {
  padding: 16rpx;
  border: 2rpx dashed #818cf8;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.meld-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.meld-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #eef2ff;
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
}

.meld-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.meld-type {
  font-size: 26rpx;
  font-weight: 600;
  color: #312e81;
  white-space: nowrap;
}

.meld-tiles {
  display: flex;
  gap: 10rpx;
  flex-wrap: nowrap;
  overflow-x: auto;
}

.meld-tile {
  font-size: 26rpx;
  color: #1e293b;
  background: #e0e7ff;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
}

.remove {
  background: #fee2e2;
  color: #b91c1c;
}

.placeholder {
  color: #6366f1;
  font-size: 24rpx;
  text-align: center;
}
