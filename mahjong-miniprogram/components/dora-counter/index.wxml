<view class="dora-counter">
  <view class="counter-header">
    <text class="label">{{label}}</text>
  </view>
  <view class="controls">
    <view 
      class="control-btn decrease {{value <= 0 ? 'disabled' : ''}}" 
      bindtap="onDecrease"
    >
      <text class="btn-icon">－</text>
    </view>
    <view class="value-display">
      <text class="value">{{value}}</text>
    </view>
    <view 
      class="control-btn increase {{value >= max ? 'disabled' : ''}}" 
      bindtap="onIncrease"
    >
      <text class="btn-icon">＋</text>
    </view>
  </view>
</view>
