.dora-counter {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.04);
}

.counter-header {
  display: flex;
  justify-content: center;
  align-items: center;
}

.label {
  color: #0f172a;
  font-size: 26rpx;
  font-weight: 600;
  text-align: center;
}

.max-hint {
  font-size: 22rpx;
  color: #94a3b8;
}

.controls {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
  background: #ffffff;
  border-radius: 12rpx;
  padding: 8rpx;
  border: 2rpx solid #e2e8f0;
  width: 100%;
  box-sizing: border-box;
}

.control-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  cursor: pointer;
}

.control-btn.decrease {
  background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
  border: 1rpx solid #fca5a5;
}

.control-btn.decrease:active {
  background: linear-gradient(135deg, #fecaca 0%, #fca5a5 100%);
  transform: scale(0.95);
}

.control-btn.increase {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  border: 1rpx solid #93c5fd;
}

.control-btn.increase:active {
  background: linear-gradient(135deg, #bfdbfe 0%, #93c5fd 100%);
  transform: scale(0.95);
}

.control-btn.disabled {
  background: #f1f5f9;
  border: 1rpx solid #e2e8f0;
  opacity: 0.5;
  cursor: not-allowed;
}

.btn-icon {
  font-size: 28rpx;
  font-weight: 600;
  color: #475569;
}

.control-btn.decrease .btn-icon {
  color: #dc2626;
}

.control-btn.increase .btn-icon {
  color: #2563eb;
}

.control-btn.disabled .btn-icon {
  color: #94a3b8;
}

.value-display {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 48rpx;
}

.value {
  font-size: 40rpx;
  font-weight: 700;
  color: #0f172a;
  line-height: 1;
}
