.overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 200;
  padding: 32rpx;
  box-sizing: border-box;
}

.dialog-card {
  width: 100%;
  max-width: 680rpx;
  max-height: 90vh;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border-radius: 24rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-sizing: border-box;
}

.dialog-header {
  padding: 40rpx 32rpx 24rpx;
  text-align: center;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: #ffffff;
}

.dialog-title {
  font-size: 38rpx;
  font-weight: 700;
}

.dialog-scroll {
  flex: 1;
  overflow-y: auto;
  padding: 32rpx;
  height: 0;
  box-sizing: border-box;
  width: 100%;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 20rpx;
  padding-left: 12rpx;
  border-left: 6rpx solid #3b82f6;
}

/* 最终排名 */
.final-scores {
  margin-bottom: 32rpx;
}

.ranking-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease;
  width: 100%;
  box-sizing: border-box;
}

.ranking-item:active {
  transform: scale(0.98);
}

.rank-1 {
  border: 3rpx solid #fbbf24;
  background: linear-gradient(135deg, #fef3c7 0%, #ffffff 100%);
}

.rank-2 {
  border: 3rpx solid #94a3b8;
  background: linear-gradient(135deg, #f1f5f9 0%, #ffffff 100%);
}

.rank-3 {
  border: 3rpx solid #f97316;
  background: linear-gradient(135deg, #fed7aa 0%, #ffffff 100%);
}

.rank-badge {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
  width: 80rpx;
  flex-shrink: 0;
}

.rank-number {
  font-size: 32rpx;
  font-weight: 700;
  color: #475569;
}

.rank-medal {
  font-size: 36rpx;
  margin-top: 4rpx;
}

.player-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  min-width: 0;
  overflow: hidden;
}

.player-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #0f172a;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.player-wind {
  font-size: 24rpx;
  color: #64748b;
}

.score-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
  flex-shrink: 0;
  min-width: 120rpx;
}

.final-score {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
  white-space: nowrap;
}

.score-diff {
  font-size: 22rpx;
  font-weight: 600;
  white-space: nowrap;
}

.score-diff.positive {
  color: #16a34a;
}

.score-diff.negative {
  color: #dc2626;
}

/* 对局统计 */
.game-stats {
  margin-bottom: 32rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.stat-item {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  box-sizing: border-box;
  min-width: 0;
}

.stat-label {
  font-size: 24rpx;
  color: #64748b;
}

.stat-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #0f172a;
  word-break: break-all;
  text-align: center;
}

/* 详细数据 */
.player-details {
  margin-bottom: 16rpx;
}

.player-detail-card {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  box-sizing: border-box;
  width: 100%;
}

.player-detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #e2e8f0;
}

.player-detail-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #0f172a;
}

.player-detail-score {
  font-size: 28rpx;
  font-weight: 700;
  color: #3b82f6;
}

.detail-stats {
  display: flex;
  justify-content: space-around;
}

.detail-stat {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
}

.detail-label {
  font-size: 22rpx;
  color: #64748b;
}

.detail-value {
  font-size: 26rpx;
  font-weight: 600;
  color: #0f172a;
}

/* 操作按钮 */
.dialog-actions {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  background: #f8fafc;
  border-top: 2rpx solid #e2e8f0;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.action-btn::after {
  border: none;
}

.action-btn.secondary {
  background: #ffffff;
  color: #3b82f6;
  border: 2rpx solid #3b82f6;
}

.action-btn.primary {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}
