}

.tile-block-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tile-chip-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.meld-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.meld-config {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.meld-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tenpai-analysis-section {
  padding: 20rpx !important;
  margin-bottom: 16rpx;
  background: #fef9c3 !important;
  border: 2rpx solid #facc15 !important;
  box-shadow: 0 4rpx 12rpx rgba(250, 204, 21, 0.2) !important;
}

.section-actions {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: nowrap;
}

.toggle-btn {
  padding: 6rpx 20rpx !important;
  min-width: auto !important;
  height: auto !important;
  line-height: 1.2 !important;
  font-size: 24rpx !important;
  border: 2rpx solid #facc15 !important;
  background: #ffffff !important;
  color: #854d0e !important;
  flex-shrink: 0;
}

.toggle-btn:active {
  background: #fef9c3 !important;
}

.tile-picker-card {
  margin-top: 16rpx;
}

.tile-chip {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  min-height: 72rpx;
  padding: 12rpx 16rpx 12rpx 16rpx;
  background: #f8fafc;
  border: 1rpx solid #d0d7e1;
  border-radius: 14rpx;
  box-sizing: border-box;
  text-align: center;
