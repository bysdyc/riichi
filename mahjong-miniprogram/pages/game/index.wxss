  flex-direction: column;
  gap: 4rpx;
}

.status-category-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1e293b;
  line-height: 1.5;
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.category-icon {
  font-size: 20rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 32rpx;
  height: 32rpx;
}

.status-category-hint {
  font-size: 22rpx;
  color: #64748b;
  line-height: 1.4;
}

.status-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.status-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 16rpx;
  min-height: 32rpx;
  border-radius: 10rpx;
  background: #ffffff;
  color: #475569;
  border: 2rpx solid #e2e8f0;
  font-size: 20rpx;
  transition: all 0.2s ease;
}

.status-btn::after {
  border: none;
}

.status-btn-name {
  font-size: 26rpx;
  font-weight: 500;
}

.status-btn.active {
  background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
  color: #ffffff;
  border-color: #16a34a;
  box-shadow: 0 6rpx 16rpx rgba(34, 197, 94, 0.32);
  transform: translateY(-2rpx);
}


.status-btn:disabled {
  opacity: 0.4;
