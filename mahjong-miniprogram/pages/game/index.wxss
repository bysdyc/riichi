.page {
  display: flex;
  flex-direction: column;
  padding: 32rpx;
  background: #f1f5f9;
  min-height: 100vh;
  box-sizing: border-box;
  overflow-x: hidden;
}

.page-scroll {
  width: 100%;
  height: calc(100vh - 64rpx);
  box-sizing: border-box;
  flex: 1;
  overflow-x: hidden;
}

.content-stack {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding-bottom: 48rpx;
  width: 100%;
  max-width: 960rpx;
  margin: 0 auto;
}

.page.loading {
  justify-content: center;
  align-items: center;
}

.card {
  background: #ffffff;
  border-radius: 1rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.08);
  width: 100%;
  box-sizing: border-box;
}

.header {
  gap: 16rpx;
}

.status {
  margin-top: 16rpx;
  padding: 16rpx;
  border-radius: 12rpx;
  background: #fee2e2;
}

.status-text {
  color: #b91c1c;
  font-size: 28rpx;
  font-weight: 600;
}

.header-top,
.header-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 16rpx;
}

.round-display {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.round {
  font-size: 36rpx;
  font-weight: 700;
}

.honba,
.riichi {
  font-size: 28rpx;
  color: #475569;
}

.header-buttons {
  display: flex;
  gap: 16rpx;
}

button.ghost {
  border: 2rpx solid #cbd5f5;
  color: #1d4ed8;
  background: #f8fafc;
}

button.primary {
  border: none;
  color: #ffffff;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  font-weight: 600;
}

button.primary,
button.secondary,
button.ghost {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  white-space: nowrap;
}

.section-head {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16rpx;
  flex-wrap: wrap;
}

.section-subtitle {
  font-size: 26rpx;
  color: #94a3b8;
}

.players-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  background: #f8fafc;
}

.players-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 24rpx;
}

@media screen and (max-width: 720rpx) {
  .players-grid {
    grid-template-columns: repeat(1, minmax(0, 1fr));
  }
}

.player-card {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  background: #ffffff;
  box-shadow: 0 6rpx 18rpx rgba(15, 23, 42, 0.06);
  border: 2rpx solid transparent;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.player-card.dealer {
  border-color: #f97316;
  box-shadow: 0 10rpx 28rpx rgba(249, 115, 22, 0.18);
}

.player-card .riichi-toggle {
  align-self: flex-start;
  background: #fef3c7;
  color: #92400e;
}

.player-card .riichi-toggle.active {
  background: #f97316;
  color: #ffffff;
}

.player-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.player-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.wind {
  font-size: 34rpx;
  font-weight: 600;
  color: #0f172a;
}

.riichi-tag {
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  background: #ef4444;
  color: #ffffff;
  font-size: 24rpx;
}

.name-input {
  border: none;
  border-bottom: 2rpx solid #94a3b8;
  padding: 12rpx 0;
  font-size: 30rpx;
  color: #0f172a;
}

.name-input::placeholder {
  color: #94a3b8;
}

.score {
  font-size: 40rpx;
  font-weight: 700;
  color: #1d4ed8;
}

.actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
}

.action-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  width: 100%;
}

.action-buttons button {
  flex: 1 1 30%;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 80rpx;
  padding: 0 16rpx;
  font-size: 30rpx;
  min-width: 0;
  white-space: nowrap;
  border-radius: 12rpx;
  font-weight: 600;
  transition: all 0.2s ease;
}

.action-single-win {
  color: #ffffff;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.3);
}

.action-single-win:active {
  background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
  transform: translateY(2rpx);
}

.action-multi-win {
  color: #ffffff;
  background: linear-gradient(135deg, #a855f7 0%, #9333ea 100%);
  box-shadow: 0 4rpx 12rpx rgba(168, 85, 247, 0.3);
}

.action-multi-win:active {
  background: linear-gradient(135deg, #9333ea 0%, #7e22ce 100%);
  transform: translateY(2rpx);
}

.action-draw {
  color: #ffffff;
  background: linear-gradient(135deg, #64748b 0%, #475569 100%);
  box-shadow: 0 4rpx 12rpx rgba(71, 85, 105, 0.3);
}

.action-draw:active {
  background: linear-gradient(135deg, #475569 0%, #334155 100%);
  transform: translateY(2rpx);
}

.primary {
  color: #ffffff;
  background: #2563eb;
}

.secondary {
  color: #0f172a;

}

.hint {
  font-size: 28rpx;
  color: #64748b;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
}

.overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(15, 23, 42, 0.45);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 32rpx;
  box-sizing: border-box;
  z-index: 99;
}

.panel-shell {
  width: 100%;
  max-width: 720rpx;
  max-height: 80vh;
  background: transparent;
  position: relative;
  display: flex;
  flex-direction: column;
}

.panel-scroll {
  flex: 1;
  overflow-y: auto;
  box-sizing: border-box;
}

.result-panel {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.panel-header {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  padding: 20rpx 24rpx 16rpx;
  padding-right: 80rpx;
}

.panel-header-fixed {
  position: sticky;
  top: 0;
  z-index: 100;
  background: #ffffff;
  border-radius: 18rpx 18rpx 0 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  flex-shrink: 0;
}

.panel-title {
  font-size: 34rpx;
  font-weight: 700;
}

.panel-close {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 600;
  padding: 0;
}

.panel-close::after {
  border: none;
}

.panel-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.panel-section.card {
  background: #ffffff;
  border-radius: 18rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(15, 23, 42, 0.08);
}

/* 和牌类型 - 浅蓝色 */
.section-win-type {
  background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%) !important;
}

/* 和牌者 - 浅绿色 */
.section-winner {
  background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%) !important;
}

/* 放铳者 - 浅红色 */
.section-loser {
  background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%) !important;
}

/* 番符模式 - 浅紫色 */
.section-calc-mode {
  background: linear-gradient(135deg, #faf5ff 0%, #f3e8ff 100%) !important;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.section-header .chip-button {
  flex: 0 1 auto;
  padding: 0 20rpx;
  min-height: 56rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

.section-header .chip-choice {
  flex: 0 1 auto;
  padding: 10rpx 20rpx;
  font-size: 26rpx;
  white-space: nowrap;
}

.tile-target {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  gap: 24rpx;
  flex-wrap: wrap;
}

.tile-block {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  background: #f8fafc;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
  cursor: pointer;
}

.tile-block:active {
  background: #f1f5f9;
}

.tile-block-active {
  background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
  border: 2rpx solid #3b82f6;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.15);
}

.tile-block + .tile-block {
