}

.tile-chip.tile-man {
  background: #fef2f2;
  border-color: #fecaca;
  color: #b91c1c;
}

.tile-chip.tile-pin {
  background: #eff6ff;
  border-color: #bfdbfe;
  color: #1d4ed8;
}

.tile-chip.tile-sou {
  background: #ecfdf5;
  border-color: #bbf7d0;
  color: #047857;
}

.tile-chip.tile-honor {
  background: #f5f3ff;
  border-color: #ddd6fe;
  color: #5b21b6;
}

.tile-chip text {
  font-size: 28rpx;
  color: inherit;
  white-space: nowrap;
}

.tile-remove {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 24rpx;
  border: none;
  border-radius: 50%;
  background: rgba(15, 23, 42, 0.12);
  color: #334155;
  padding: 0;
}

.tile-remove::after {
  border: none;
}

.tile-empty {
  font-size: 26rpx;
  color: #94a3b8;
  display: block;
  text-align: center;
}

.tile-win-display {
  flex: 1;
  min-height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  background: #ffffff;
  border: 2rpx dashed #cbd5e1;
  padding: 8rpx 20rpx;
  margin: 0 12rpx;
  transition: all 0.2s ease;
}

.tile-win-display.tile-win-man {
  background: #fef2f2;
  border-color: #fecaca;
}

.tile-win-display.tile-win-man .tile-face {
  color: #b91c1c;
}

.tile-win-display.tile-win-pin {
  background: #eff6ff;
  border-color: #bfdbfe;
}

.tile-win-display.tile-win-pin .tile-face {
  color: #1d4ed8;
}

.tile-win-display.tile-win-sou {
  background: #ecfdf5;
  border-color: #bbf7d0;
}

.tile-win-display.tile-win-sou .tile-face {
  color: #047857;
}

.tile-win-display.tile-win-honor {
  background: #f5f3ff;
  border-color: #ddd6fe;
}

.tile-win-display.tile-win-honor .tile-face {
  color: #5b21b6;
}

.tile-face {
  font-size: 32rpx;
  font-weight: 600;
  color: #0f172a;
}

.status-section {
  background: linear-gradient(135deg, #fdfbfb 0%, #f8f9fa 100%) !important;
}

.status-header-left {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  flex: 1;
}

.status-summary {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-top: 16rpx;
  padding: 16rpx;
  background: #ffffff;
  border-radius: 12rpx;
  border: 2rpx solid #e2e8f0;
}

.status-pill-group {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 8rpx;
}

.status-pill-label {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 600;
  min-width: 80rpx;
}

.status-pill {
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  background: #e2e8f0;
  color: #475569;
  font-size: 22rpx;
  white-space: nowrap;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  line-height: 1.3;
}

.status-pill.positive {
  background: #bbf7d0;
  color: #15803d;
  font-weight: 600;
}

.status-pill.warning {
  background: #fecaca;
  color: #dc2626;
  font-weight: 600;
}

.status-pill.active {
  background: #dbeafe;
  color: #1d4ed8;
  font-weight: 600;
}


.status-category {
  margin-top: 20rpx;
  margin-bottom: 10rpx;
