.page {
  padding: 32rpx;
  min-height: 100vh;
  background: #f1f5f9;
  box-sizing: border-box;
}

.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.08);
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.header-section {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #0f172a;
}

.subtitle {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.5;
}

.format-section,
.options-section,
.preview-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.section-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #334155;
}

.format-options {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.format-btn {
  flex: 1;
  min-width: 140rpx;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e2e8f0;
  background: #f8fafc;
  color: #475569;
  font-size: 26rpx;
  transition: all 0.2s ease;
}

.format-btn::after {
  border: none;
}

.format-btn.active {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  border-color: #2563eb;
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.3);
  font-weight: 600;
}

.option-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  border: 2rpx solid #e2e8f0;
}

.option-label {
  font-size: 28rpx;
  color: #334155;
}

.preview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.preview-info {
  font-size: 24rpx;
  color: #94a3b8;
}

.export-text {
  width: 100%;
  min-height: 400rpx;
  max-height: 600rpx;
  border: 2rpx solid #cbd5f5;
  border-radius: 12rpx;
  padding: 16rpx;
  background: #f8fafc;
  color: #0f172a;
  font-size: 24rpx;
  line-height: 1.6;
  font-family: 'Courier New', Courier, monospace;
  box-sizing: border-box;
}

.action-section {
  display: flex;
  flex-direction: row;
  gap: 12rpx;
  flex-wrap: wrap;
}

.action-copy,
.action-share,
.action-save {
  flex: 1;
  min-width: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 12rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.2s ease;
}

.action-copy {
  background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(34, 197, 94, 0.3);
}

.action-copy:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(34, 197, 94, 0.3);
}

.action-share {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.3);
}

.action-share:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(37, 99, 235, 0.3);
}

.action-save {
  background: linear-gradient(135deg, #a855f7 0%, #9333ea 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(168, 85, 247, 0.3);
}

.action-save:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(168, 85, 247, 0.3);
}

.action-icon {
  font-size: 36rpx;
  line-height: 1;
}

.tips-section {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
  border-radius: 12rpx;
  border: 2rpx solid #bfdbfe;
}

.tips-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1e40af;
}

.tips-item {
  font-size: 24rpx;
  color: #1e40af;
  line-height: 1.6;
}

.primary {
  background: #2563eb;
  color: #ffffff;
}
