.page {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 32rpx;
  min-height: 100vh;
  background: #f1f5f9;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
}

.subtitle {
  font-size: 28rpx;
  color: #64748b;
  margin-top: 12rpx;
}

.empty {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.08);
}

.history-scroll {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.history-card {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.05);
}

.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.details {
  color: #475569;
}

.meta {
  font-size: 26rpx;
  color: #0f172a;
}

.round {
  font-size: 30rpx;
  font-weight: 600;
  color: #0f172a;
}

.type {
  font-size: 26rpx;
  color: #1d4ed8;
}

.snapshot {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 16rpx;
  background: #f8fafc;
  border-radius: 12rpx;
}

.snapshot-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
}

.name {
  flex: 1;
  color: #0f172a;
}

.delta {
  width: 160rpx;
  text-align: right;
}

.delta.positive {
  color: #047857;
}

.delta.negative {
  color: #b91c1c;
}

.score {
  width: 160rpx;
  text-align: right;
  color: #0f172a;
}

.tags {
  font-size: 24rpx;
  color: #1d4ed8;
}

.tag {
  background: #dbeafe;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
}

.timestamp {
  font-size: 22rpx;
  color: #94a3b8;
  text-align: right;
}

.multi-detail {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  background: #eef2ff;
  border-radius: 12rpx;
}

.multi-detail-row {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #1e293b;
}

.multi-name {
  font-weight: 600;
  color: #312e81;
}

.multi-hanfu {
  color: #4338ca;
}

.multi-points {
  margin-left: auto;
  color: #0f172a;
}

.multi-bonus {
  color: #047857;
}
