<view class="page">
  <view class="empty card" wx:if="{{history.length === 0}}">
    <text class="title">暂无历史记录</text>
    <text class="subtitle">完成首局结算后将在此展示。</text>
  </view>

  <scroll-view scroll-y="true" class="history-scroll" wx:else>
    <block wx:for="{{history}}" wx:key="id" wx:for-item="record">
      <history-card round="{{record}}" />
    </block>
  </scroll-view>
</view>
