.container {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  padding: 32rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: #0f172a;
}

.subtitle {
  font-size: 28rpx;
  color: #475569;
  margin-top: 12rpx;
}

.actions button {
  margin-bottom: 20rpx;
}

.primary {
  background: linear-gradient(135deg, #34d399, #0ea5e9);
  color: #ffffff;
}

.checkbox {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 20rpx;
  color: #334155;
}
